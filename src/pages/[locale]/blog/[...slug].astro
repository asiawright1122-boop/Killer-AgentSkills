---
import { getCollection, render } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { ArrowLeft, Calendar, User, Clock, Share2 } from 'lucide-react';
import { SUPPORTED_LOCALES, type Locale, loadMessages, useTranslations } from '../../../i18n';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  console.log('DEBUG: Blog posts found:', posts.length);
  if (posts.length > 0) {
      console.log('DEBUG: Sample post id:', posts[0].id);
      console.log('DEBUG: Sample post data:', JSON.stringify(posts[0].data));
  }
  return posts.map((post) => {
    const [lang, ...slugParts] = post.id.split('/');
    const slug = slugParts.join('/').replace(/\.md$/, '');

    return {
      params: { locale: lang, slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { locale } = Astro.params;
const { Content, headings } = await render(post);
const messages = await loadMessages(locale as Locale);
const t = useTranslations(messages);
const tb = messages.Blog;

const dateOptions: Intl.DateTimeFormatOptions = {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
};
const formattedDate = post.data.pubDate.toLocaleDateString(locale, dateOptions);

// Estimate read time (rough)
const wordCount = post.body.split(/\s+/g).length;
const readTime = Math.ceil(wordCount / 200);
// OG Image Generation (Dynamic V2)
const ogImageParams = new URLSearchParams({
  type: 'blog',
  title: post.data.title,
  description: post.data.description,
  author: post.data.author,
  date: formattedDate,
  readingTime: readTime.toString(),
});
const ogImage = `http://146.235.234.248:3000/?${ogImageParams.toString()}`;
---

<Layout 
    locale={locale || 'en'}
    title={post.data.title} 
    description={post.data.description}
    image={ogImage}
    ogType="article"
>
    {/* Reading Progress Bar */}
    <div class="fixed top-0 left-0 w-full h-1 z-50 bg-transparent">
        <div id="progress-bar" class="h-full bg-gradient-to-r from-sky-500 to-cyan-500 dark:from-purple-500 dark:to-cyan-500 w-0 transition-all duration-100 ease-out"></div>
    </div>

    <div class="min-h-screen bg-white dark:bg-slate-950 text-slate-900 dark:text-white font-sans selection:bg-sky-500/20 dark:selection:bg-purple-500/30 selection:text-sky-900 dark:selection:text-purple-200">
        
        {/* Ambient Backlight */}
        <div class="fixed top-0 left-0 w-full h-full overflow-hidden pointer-events-none z-0">
             <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[80%] h-[500px] bg-sky-500/5 dark:bg-purple-900/10 blur-[120px] rounded-full"></div>
        </div>

        <main class="relative z-10 pt-24 pb-20">
            <div class="max-w-[1400px] mx-auto px-6 grid grid-cols-1 lg:grid-cols-[1fr_300px] gap-12 items-start">
                
                {/* Article Content Column */}
                <article class="min-w-0 mx-auto w-full max-w-3xl">
                    
                    {/* Breadcrumb / Back */}
                    <a href={`/${locale}/blog`} class="inline-flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white transition-colors mb-8 group">
                        <ArrowLeft size={16} class="group-hover:-translate-x-1 transition-transform" />
                        {t('Common.back') || 'Back'}
                    </a>

                    {/* Header */}
                    <header class="mb-12">
                        <div class="flex items-center gap-3 mb-6">
                            {post.data.tags && post.data.tags.map(tag => (
                                <span class="px-3 py-1 text-xs font-bold tracking-wider text-sky-700 dark:text-purple-300 uppercase bg-sky-50 dark:bg-purple-500/10 rounded-full border border-sky-200 dark:border-purple-500/20">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6 leading-tight text-slate-900 dark:text-white">
                            {post.data.title}
                        </h1>

                        <div class="flex flex-wrap items-center gap-6 text-sm text-slate-500 dark:text-slate-400 font-medium">
                            <div class="flex items-center gap-2">
                                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-sky-500 to-cyan-500 dark:from-purple-500 dark:to-cyan-500 flex items-center justify-center text-xs text-white font-bold border-2 border-white dark:border-slate-950">
                                    {post.data.author.charAt(0)}
                                </div>
                                <span class="text-slate-800 dark:text-slate-200">{post.data.author}</span>
                            </div>
                            <div class="flex items-center gap-1.5">
                                <Calendar size={16} />
                                <time>{formattedDate}</time>
                            </div>
                             <div class="flex items-center gap-1.5">
                                <Clock size={16} />
                                <span>{tb.readTime.replace('{n}', readTime.toString())}</span>
                            </div>
                        </div>
                    </header>

                    {/* Hero Image */}
                    {post.data.heroImage && (
                        <div class="rounded-2xl overflow-hidden mb-12 border border-slate-200 dark:border-white/10 shadow-xl dark:shadow-2xl aspect-video relative group">
                            <img 
                                src={post.data.heroImage} 
                                alt={post.data.title} 
                                class="w-full h-full object-cover"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/30 dark:from-gray-900/50 to-transparent"></div>
                        </div>
                    )}

                    {/* Post Body (Typography) â€” KEY: prose for light, prose-invert for dark */}
                    <div class="
                        prose prose-lg max-w-none 
                        dark:prose-invert
                        prose-headings:font-bold prose-headings:tracking-tight 
                        prose-a:text-sky-600 hover:prose-a:text-sky-500 
                        dark:prose-a:text-cyan-400 dark:hover:prose-a:text-cyan-300 
                        prose-img:rounded-xl 
                        prose-pre:border prose-pre:border-slate-200 dark:prose-pre:border-white/10 
                        prose-code:text-sky-700 dark:prose-code:text-cyan-300
                        prose-strong:text-slate-900 dark:prose-strong:text-white
                        prose-p:text-slate-700 dark:prose-p:text-slate-300
                        prose-p:leading-relaxed
                        prose-li:text-slate-700 dark:prose-li:text-slate-300
                        prose-blockquote:border-sky-500 dark:prose-blockquote:border-purple-500
                        prose-blockquote:text-slate-600 dark:prose-blockquote:text-slate-400
                        prose-h2:text-slate-900 dark:prose-h2:text-white
                        prose-h3:text-slate-800 dark:prose-h3:text-slate-100
                    ">
                        <Content />
                    </div>

                    {/* Footer / Share */}
                    <div class="mt-16 pt-8 border-t border-slate-200 dark:border-white/10 flex items-center justify-between">
                         <div class="text-sm text-slate-500 dark:text-slate-400">
                            Published in <span class="text-slate-900 dark:text-white font-bold">{locale === 'en' ? 'English' : 'Chinese'}</span>
                         </div>
                         <button class="flex items-center gap-2 px-4 py-2 bg-slate-100 dark:bg-white/5 hover:bg-slate-200 dark:hover:bg-white/10 rounded-full text-sm font-bold text-slate-700 dark:text-white transition-colors">
                            <Share2 size={16} />
                            {t('Aria.shareSkill') ? t('Aria.shareSkill').replace(' this skill', '') : 'Share'}
                         </button>
                    </div>

                </article>

                {/* Sidebar (TOC) */}
                <aside class="hidden lg:block sticky top-24 space-y-8">
                    
                    {/* Table of Contents */}
                    <div class="p-6 rounded-2xl bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 backdrop-blur-sm">
                        <h3 class="text-sm font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-4">{t('Docs.tableOfContents')}</h3>
                        <nav>
                            <ul class="space-y-2 text-sm">
                                {headings.map(heading => (
                                    <li class={`pl-${(heading.depth - 1) * 3}`}>
                                        <a 
                                            href={`#${heading.slug}`} 
                                            class="block text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white transition-colors line-clamp-1"
                                        >
                                            {heading.text}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </nav>
                    </div>

                </aside>
            </div>
        </main>
    </div>

    <script is:inline>
        // Reading Progress Bar
        const progressBar = document.getElementById('progress-bar');
        window.addEventListener('scroll', () => {
            const scrollTop = window.scrollY || document.documentElement.scrollTop;
            const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (scrollTop / scrollHeight) * 100;
            if (progressBar) {
                progressBar.style.width = scrolled + '%';
            }
        }, { passive: true });
    </script>
</Layout>
