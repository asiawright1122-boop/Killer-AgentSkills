---
import { getCollection, render } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { ArrowLeft, Calendar, User, Clock, Share2 } from 'lucide-react';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  console.log('DEBUG: Blog posts found:', posts.length);
  if (posts.length > 0) {
      console.log('DEBUG: Sample post id:', posts[0].id);
      console.log('DEBUG: Sample post data:', JSON.stringify(posts[0].data));
  }
  return posts.map((post) => {
    // We want the URL to be /en/blog/slug
    // So we need to match the [locale] param.
    
    // For glob loader with base "./src/content/blog", IDs are like "en/slug.md" or "en/slug"
    // Let's assume id is relative path.
    const [lang, ...slugParts] = post.id.split('/');
    const slug = slugParts.join('/').replace(/\.md$/, ''); // Remove extension if present

    return {
      params: { locale: lang, slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { locale } = Astro.params;
const { Content, headings } = await render(post);

const dateOptions: Intl.DateTimeFormatOptions = {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
};
const formattedDate = post.data.pubDate.toLocaleDateString(locale, dateOptions);

// Estimate read time (rough)
const wordCount = post.body.split(/\s+/g).length;
const readTime = Math.ceil(wordCount / 200);
// OG Image Generation (Dynamic V2)
const ogImageParams = new URLSearchParams({
  type: 'blog',
  title: post.data.title,
  description: post.data.description,
  author: post.data.author,
  date: formattedDate,
  readingTime: readTime.toString(), // Use the calculated readTime
});
const ogImage = `http://146.235.234.248:3000/?${ogImageParams.toString()}`;
---

<Layout 
    locale={locale || 'en'}
    title={post.data.title} 
    description={post.data.description}
    image={ogImage}
    ogType="article"
>
    {/* Reading Progress Bar */}
    <div class="fixed top-0 left-0 w-full h-1 z-50 bg-transparent">
        <div id="progress-bar" class="h-full bg-gradient-to-r from-purple-500 to-cyan-500 w-0 transition-all duration-100 ease-out"></div>
    </div>

    <div class="min-h-screen bg-[#050505] text-white font-sans selection:bg-purple-500/30 selection:text-purple-200">
        
        {/* Ambient Backlight */}
        <div class="fixed top-0 left-0 w-full h-full overflow-hidden pointer-events-none z-0">
             <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[80%] h-[500px] bg-purple-900/10 blur-[120px] rounded-full"></div>
        </div>

        <main class="relative z-10 pt-24 pb-20">
            <div class="max-w-[1400px] mx-auto px-6 grid grid-cols-1 lg:grid-cols-[1fr_300px] gap-12 items-start">
                
                {/* Article Content Column */}
                <article class="min-w-0 mx-auto w-full max-w-3xl">
                    
                    {/* Breadcrumb / Back */}
                    <a href={`/${locale}/blog`} class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors mb-8 group">
                        <ArrowLeft size={16} class="group-hover:-translate-x-1 transition-transform" />
                        Back to Blog
                    </a>

                    {/* Header */}
                    <header class="mb-12">
                        <div class="flex items-center gap-3 mb-6">
                            {post.data.tags && post.data.tags.map(tag => (
                                <span class="px-3 py-1 text-xs font-bold tracking-wider text-purple-300 uppercase bg-purple-500/10 rounded-full border border-purple-500/20">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6 leading-tight text-white">
                            {post.data.title}
                        </h1>

                        <div class="flex flex-wrap items-center gap-6 text-sm text-gray-400 font-medium">
                            <div class="flex items-center gap-2">
                                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-purple-500 to-cyan-500 flex items-center justify-center text-xs text-white font-bold border-2 border-black">
                                    {post.data.author.charAt(0)}
                                </div>
                                <span class="text-gray-200">{post.data.author}</span>
                            </div>
                            <div class="flex items-center gap-1.5">
                                <Calendar size={16} />
                                <time>{formattedDate}</time>
                            </div>
                             <div class="flex items-center gap-1.5">
                                <Clock size={16} />
                                <span>{readTime} min read</span>
                            </div>
                        </div>
                    </header>

                    {/* Hero Image */}
                    {post.data.heroImage && (
                        <div class="rounded-2xl overflow-hidden mb-12 border border-white/10 shadow-2xl aspect-video relative group">
                            <img 
                                src={post.data.heroImage} 
                                alt={post.data.title} 
                                class="w-full h-full object-cover"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/50 to-transparent"></div>
                        </div>
                    )}

                    {/* Post Body (Typography) */}
                    <div class="prose prose-invert prose-lg max-w-none prose-headings:font-bold prose-headings:tracking-tight prose-a:text-cyan-400 hover:prose-a:text-cyan-300 prose-img:rounded-xl prose-pre:border prose-pre:border-white/10 prose-pre:bg-gray-900/50">
                        <Content />
                    </div>

                    {/* Footer / Share */}
                    <div class="mt-16 pt-8 border-t border-white/10 flex items-center justify-between">
                         <div class="text-sm text-gray-400">
                            Published in <span class="text-white font-bold">{locale === 'en' ? 'English' : 'Chinese'}</span>
                         </div>
                         <button class="flex items-center gap-2 px-4 py-2 bg-white/5 hover:bg-white/10 rounded-full text-sm font-bold text-white transition-colors">
                            <Share2 size={16} />
                            Share
                         </button>
                    </div>

                </article>

                {/* Sidebar (TOC) */}
                <aside class="hidden lg:block sticky top-24 space-y-8">
                    
                    {/* Initial CTA Card or Author Card could go here */}
                    
                    {/* Table of Contents */}
                    <div class="p-6 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm">
                        <h3 class="text-sm font-bold uppercase tracking-wider text-gray-400 mb-4">Table of Contents</h3>
                        <nav>
                            <ul class="space-y-2 text-sm">
                                {headings.map(heading => (
                                    <li class={`pl-${(heading.depth - 1) * 3}`}>
                                        <a 
                                            href={`#${heading.slug}`} 
                                            class="block text-gray-400 hover:text-white transition-colors line-clamp-1"
                                        >
                                            {heading.text}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </nav>
                    </div>

                </aside>
            </div>
        </main>
    </div>

    <script is:inline>
        // Reading Progress Bar
        const progressBar = document.getElementById('progress-bar');
        window.addEventListener('scroll', () => {
            const scrollTop = window.scrollY || document.documentElement.scrollTop;
            const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (scrollTop / scrollHeight) * 100;
            if (progressBar) {
                progressBar.style.width = scrolled + '%';
            }
        }, { passive: true });
    </script>
</Layout>
