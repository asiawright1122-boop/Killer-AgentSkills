---
import HeaderActions from '../islands/HeaderActions';
import { LOCALE_NAMES } from '../i18n';

interface Props {
	locale: string;
	t: (key: string) => string;
}

const { locale, t } = Astro.props;
---

<header class="sticky top-0 z-50 w-full border-b border-slate-200/80 dark:border-slate-800/80 bg-white/80 dark:bg-slate-950/80 backdrop-blur-xl transition-all">
    <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
        
        <!-- Logo -->
        <a href={`/${locale}`} class="flex items-center gap-2 group">
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-cyan-500 to-blue-600 flex items-center justify-center text-white font-bold shadow-lg shadow-cyan-500/20 group-hover:scale-105 transition-transform">
                K
            </div>
            <span class="font-bold text-xl tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-slate-800 to-slate-600 dark:from-white dark:to-slate-300">
                Killer-Skills
            </span>
        </a>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex items-center gap-8 text-sm font-medium text-slate-600 dark:text-slate-400">
            <a href={`/${locale}`} class="hover:text-cyan-600 dark:hover:text-cyan-400 transition-colors">{t('Common.home')}</a>
            <a href={`/${locale}/skills`} class="hover:text-cyan-600 dark:hover:text-cyan-400 transition-colors">{t('Common.skillsMarket')}</a>
            <a href={`/${locale}/docs`} class="hover:text-cyan-600 dark:hover:text-cyan-400 transition-colors">{t('Footer.docs')}</a>
            <a href={`/${locale}/cli`} class="hover:text-cyan-600 dark:hover:text-cyan-400 transition-colors">{t('Footer.cli')}</a>
        </nav>

        <!-- Rights/Actions -->
        <HeaderActions 
            client:load 
            locale={locale} 
            localeNames={LOCALE_NAMES} 
            labels={{
                home: t('Navigation.home'),
                skills: t('Navigation.marketplace'),
                categories: t('Navigation.categories'),
                docs: t('Navigation.docs'),
                cli: t('Footer.cli'),
                community: t('Footer.community'),
                language: t('Common.language'),
                theme: t('Common.theme') || 'Theme',
                favorites: t('Navigation.favorites'),
                github: t('Navigation.github'),
                switchLanguage: t('Aria.switchLanguage'),
                toggleTheme: t('Aria.toggleTheme'),
                toggleMenu: t('Aria.toggleMenu'),
                favoritesAria: t('Navigation.favorites')
            }}
        />

    </div>
</header>
