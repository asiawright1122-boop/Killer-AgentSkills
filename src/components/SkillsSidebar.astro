---
import { OFFICIAL_REPOS } from '../lib/skills-config';
import { getLangFromUrl, useTranslations, loadMessages } from '../i18n';

interface Props {
  activeCategory?: string;
  activeView?: string;
}

const { activeCategory = 'all', activeView = '' } = Astro.props;
const locale = getLangFromUrl(Astro.url);
const messages = await loadMessages(locale);
const t = useTranslations(messages);

// View options
const views = [
  { id: 'official', name: t('Sidebar.views.official'), icon: 'verified', count: Object.values(OFFICIAL_REPOS).filter(v => v.type === 'official').length },
  { id: 'featured', name: t('Sidebar.views.featured'), icon: 'star', count: Object.values(OFFICIAL_REPOS).filter(v => v.type === 'featured').length },
  { id: 'latest', name: t('Sidebar.views.latest'), icon: 'clock' },
];

const categories = [
  { id: 'all', name: t('Sidebar.categories.all'), icon: 'grid' },
  { id: 'browser', name: t('Sidebar.categories.browser'), icon: 'globe' },
  { id: 'finance', name: t('Sidebar.categories.finance'), icon: 'credit-card' },
  { id: 'productivity', name: t('Sidebar.categories.productivity'), icon: 'zap' },
  { id: 'developer', name: t('Sidebar.categories.developer'), icon: 'code' },
  { id: 'data', name: t('Sidebar.categories.data'), icon: 'bar-chart' },
  { id: 'ai', name: t('Sidebar.categories.ai'), icon: 'cpu' },
  { id: 'design', name: t('Sidebar.categories.design'), icon: 'pen-tool' },
];

const frameworks = [
  { id: 'langchain', name: 'LangChain' },
  { id: 'autogen', name: 'AutoGen' },
  { id: 'crewai', name: 'CrewAI' },
  { id: 'openai', name: 'OpenAI' },
];
---

<aside class="w-full md:w-72 shrink-0 space-y-6 md:sticky md:top-24 h-fit">
  
  <!-- Navigation Card -->
  <nav class="glass-card rounded-2xl p-4">
    <div class="space-y-6">
      
      <!-- Discover Section -->
      <div>
        <h3 class="px-3 text-xs font-bold uppercase tracking-wider mb-3" style="color: var(--muted-foreground);">
          {t('Sidebar.discover')}
        </h3>
        <div class="space-y-1">
          {views.map(view => (
            <a 
              href={`/${locale}/skills?view=${view.id}`} 
              class:list={[
                "flex items-center justify-between px-3 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 group",
                activeView === view.id 
                  ? "bg-[var(--primary)] text-[var(--primary-foreground)]" 
                  : "hover:bg-[var(--secondary)]"
              ]}
            >
              <div class="flex items-center gap-3">
                {view.icon === 'verified' && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                )}
                {view.icon === 'star' && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                )}
                {view.icon === 'clock' && (
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                <span>{view.name}</span>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Separator -->
      <div class="h-px mx-3" style="background: var(--border);"></div>

      <!-- Categories Section -->
      <div>
        <h3 class="px-3 text-xs font-bold uppercase tracking-wider mb-3" style="color: var(--muted-foreground);">
          {t('Sidebar.categories.title')}
        </h3>
        <div class="space-y-1">
          {categories.map(category => (
            <a 
              href={`/${locale}/skills?category=${category.id}`} 
              class:list={[
                "flex items-center gap-3 px-3 py-2 rounded-xl text-sm font-medium transition-all duration-200 group",
                activeCategory === category.id 
                  ? "bg-[var(--tag-bg)] text-[var(--tag-text)]" 
                  : "hover:bg-[var(--secondary)]"
              ]}
            >
              {category.icon === 'grid' && (
                <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
                </svg>
              )}
              {category.icon === 'globe' && (
                <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
              )}
              {category.icon === 'credit-card' && (
                <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
              )}
              {category.icon === 'zap' && (
                <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              )}
              {category.icon === 'code' && (
                <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                </svg>
              )}
              {category.icon === 'bar-chart' && (
                <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              )}
              {category.icon === 'cpu' && (
                <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              )}
              {category.icon === 'pen-tool' && (
                <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                </svg>
              )}
              <span>{category.name}</span>
            </a>
          ))}
        </div>
      </div>

      <!-- Separator -->
      <div class="h-px mx-3" style="background: var(--border);"></div>

      <!-- Frameworks Section -->
      <div>
        <h3 class="px-3 text-xs font-bold uppercase tracking-wider mb-3" style="color: var(--muted-foreground);">
          {t('Sidebar.frameworks')}
        </h3>
        <div class="flex flex-wrap gap-2 px-3">
          {frameworks.map(fw => (
            <a 
              href={`/${locale}/skills?tag=${fw.id}`} 
              class="px-3 py-1.5 rounded-lg text-xs font-medium transition-colors"
              style="background: var(--secondary); color: var(--secondary-foreground);"
            >
              {fw.name}
            </a>
          ))}
        </div>
      </div>

    </div>
  </nav>



</aside>
